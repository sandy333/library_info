<h1>Listing books</h1>

<table>
  <tr>
    <th>Library</th>
    <th>Books</th>
    <th>Author</th>
    <th>Name</th>
    <th>Edition</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.library_info_id %></td>
    <td><%= book.books_id %></td>
    <td><%= book.author %></td>
    <td><%= book.name %></td>
    <td><%= book.edition %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

